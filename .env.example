# Neon PostgreSQL
# Pooled connection (for serverless functions)
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"
# Direct connection (for migrations)
DIRECT_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# JWT 密钥
JWT_SECRET="your-super-secret-change-this"

# Cloudflare R2
R2_ENDPOINT="https://account-id.r2.cloudflarestorage.com"
R2_ACCESS_KEY_ID="your-access-key"
R2_SECRET_ACCESS_KEY="your-secret-key"
R2_BUCKET_NAME="recipe-zen-images"
R2_PUBLIC_URL="https://images.yourdomain.com"

# ==================== AI 服务配置 ====================

# 文本生成 - GLM（智谱AI）
AI_TEXT_PROVIDER="glm"
GLM_API_KEY="your-glm-api-key"
GLM_API_URL="https://open.bigmodel.cn/api/paas/v4"
# 可选：自定义模型（默认：glm-4-flash）
# GLM_MODEL="glm-4-flash"

# 图像生成 - Evolink
AI_IMAGE_PROVIDER="evolink"
EVOLINK_API_KEY="sk-your-evolink-api-key"
EVOLINK_API_URL="https://evolink.ai/api/v1"
# 可选：自定义模型（默认：z-image-turbo）
# EVOLINK_MODEL="z-image-turbo"

# DeepSeek（备用文本生成）
DEEPSEEK_API_KEY="sk-your-deepseek-api-key"
DEEPSEEK_API_URL="https://api.deepseek.com/v1"
# 可选：自定义模型（默认：deepseek-chat）
# DEEPSEEK_MODEL="deepseek-chat"

# 网站
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
